<UserControl x:Class="LanguageSchoolApp.view.Courses.ActiveCourseScheduleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LanguageSchoolApp.view.Courses"
             mc:Ignorable="d" 
             d:DesignHeight="193" d:DesignWidth="404">
    <Border CornerRadius="20"
        Background="#fff"
        BorderThickness="1">
        <Border.BorderBrush>
            <SolidColorBrush Color="#000" Opacity="0.10"/>
        </Border.BorderBrush>
        <Border.Effect>
            <DropShadowEffect Color="#000"
          Direction="315"
          ShadowDepth="5"
          BlurRadius="10"
          Opacity="0.5"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label Content="Schedule"
               FontFamily="Cambria"
               FontSize="20"
               FontWeight="Medium"
               HorizontalAlignment="Center"/>
            <Border BorderThickness="0,1,0,1" Grid.Row="1">
                <Border.BorderBrush>
                    <SolidColorBrush Color="#000" Opacity="0.10"/>
                </Border.BorderBrush>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Monday"
                       FontFamily="Cambria"
                       FontSize="9"
                       HorizontalAlignment="Center"/>
                    <Label Content="Tuesday"
                       Grid.Column="1"
                       FontFamily="Cambria"
                       FontSize="9"
                       HorizontalAlignment="Center"/>
                    <Label Content="Wednesday"
                       Grid.Column="2"
                       FontFamily="Cambria"
                       FontSize="9"
                       HorizontalAlignment="Center"/>
                    <Label Content="Thursday"
                       Grid.Column="3"
                       FontFamily="Cambria"
                       FontSize="9"
                       HorizontalAlignment="Center"/>
                    <Label Content="Friday"
                       Grid.Column="4"
                       FontFamily="Cambria"
                       FontSize="9"
                       HorizontalAlignment="Center"/>
                    <Label Content="Saturday"
                       Grid.Column="5"
                       FontFamily="Cambria"
                       FontSize="9"
                       HorizontalAlignment="Center"/>
                    <Label Content="Sunday"
                       Grid.Column="6"
                       FontFamily="Cambria"
                       FontSize="9"
                       HorizontalAlignment="Center"/>
                </Grid>
            </Border>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <ItemsControl Grid.Column="0" HorizontalAlignment="Center" ItemsSource="{Binding MondayClasses}"
                          Background="Transparent" BorderThickness="0">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Label FontFamily="Cambria" HorizontalAlignment="Center" FontSize="9" Content="{Binding StartTime, StringFormat=\{0:HXPath:mMode\}}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <ItemsControl Grid.Column="1" HorizontalAlignment="Center" ItemsSource="{Binding MondayClasses}"
                          Background="Transparent" BorderThickness="0">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Label FontFamily="Cambria" HorizontalAlignment="Center" FontSize="9" Content="{Binding StartTime, StringFormat=\{0:HXPath:mMode\}}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <ItemsControl Grid.Column="2" HorizontalAlignment="Center" ItemsSource="{Binding TuesdayClasses}"
                          Background="Transparent" BorderThickness="0">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Label FontFamily="Cambria" HorizontalAlignment="Center" FontSize="9" Content="{Binding StartTime, StringFormat=\{0:HXPath:mMode\}}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <ItemsControl Grid.Column="3" HorizontalAlignment="Center" ItemsSource="{Binding WednesdayClasses}"
                          Background="Transparent" BorderThickness="0">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Label FontFamily="Cambria" HorizontalAlignment="Center" FontSize="9" Content="{Binding StartTime, StringFormat=\{0:HXPath:mMode\}}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <ItemsControl Grid.Column="4" HorizontalAlignment="Center" ItemsSource="{Binding ThursdayClasses}"
                          Background="Transparent" BorderThickness="0">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Label FontFamily="Cambria" HorizontalAlignment="Center" FontSize="9" Content="{Binding StartTime, StringFormat=\{0:HXPath:mMode\}}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <ItemsControl Grid.Column="5" HorizontalAlignment="Center" ItemsSource="{Binding SaturdayClasses}"
                          Background="Transparent" BorderThickness="0">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Label FontFamily="Cambria" HorizontalAlignment="Center" FontSize="9" Content="{Binding StartTime, StringFormat=\{0:HXPath:mMode\}}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <ItemsControl Grid.Column="6" HorizontalAlignment="Center" ItemsSource="{Binding SundayClasses}"
                          Background="Transparent" BorderThickness="0">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Label FontFamily="Cambria" HorizontalAlignment="Center" FontSize="9" Content="{Binding StartTime, StringFormat=\{0:HXPath:mMode\}}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Grid>
    </Border>
</UserControl>
