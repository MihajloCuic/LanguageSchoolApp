<UserControl x:Class="LanguageSchoolApp.view.Courses.CreateCourseView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LanguageSchoolApp.view.Courses"
             mc:Ignorable="d" 
             d:DesignHeight="489" d:DesignWidth="653">
    <Grid Margin="26,20,36,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label Content="Language Name"
                       Foreground="#000"
                       FontFamily="Cambria"
                       FontWeight="Bold"
                       FontSize="20"/>
                <TextBox Style="{StaticResource RoundedTextBox}"
                         HorizontalAlignment="Left"
                         Text="{Binding LanguageName}"
                         Height="34" Width="179"
                         Grid.Row="1"/>
                <Label Content="{Binding LanguageNameError}"
                       Foreground="Red"
                       Grid.Row="2"
                       FontFamily="Cambria"
                       FontWeight="Thin"
                       FontSize="10"/>

            </Grid>
            <Grid Grid.Column="1" Margin="15,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label Content="Language Level"
                       Foreground="#000"
                       FontFamily="Cambria"
                       FontSize="20"
                       FontWeight="Bold"/>
                <ComboBox Style="{StaticResource ComboboxStyle}"
                          Height="34" Width="95"
                          Grid.Row="1"
                          SelectedValue="{Binding LanguageLevel}"
                          SelectedValuePath="Content"
                          HorizontalAlignment="Left">
                    <ComboBoxItem>A1</ComboBoxItem>
                    <ComboBoxItem>A2</ComboBoxItem>
                    <ComboBoxItem>B1</ComboBoxItem>
                    <ComboBoxItem>B2</ComboBoxItem>
                    <ComboBoxItem>C1</ComboBoxItem>
                    <ComboBoxItem>C2</ComboBoxItem>
                </ComboBox>
                <Label Content="{Binding LanguageLevelError}"
                       Foreground="Red"
                       Grid.Row="2"
                       FontFamily="Cambria"
                       FontWeight="Thin"
                       FontSize="10"/>

            </Grid>
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label Content="Beginning Date"
                       Foreground="#000"
                       FontFamily="Cambria"
                       FontWeight="Bold"
                       FontSize="20" Margin="0,0,18,0"/>
                <DatePicker Grid.Row="1"
                            Width="179"
                            SelectedDate="{Binding BeginningDate}"
                            HorizontalAlignment="Left"/>
                <Label Content="{Binding BeginningDateError}"
                       Foreground="Red"
                       Grid.Row="2"
                       FontFamily="Cambria"
                       FontWeight="Thin"
                       FontSize="10"/>

            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label Content="Max Participation"
                       FontFamily="Cambria"
                       FontWeight="Bold"
                       FontSize="20"
                       Foreground="#000"/>
                <TextBox Style="{StaticResource RoundedTextBox}"
                         Text="{Binding MaxParticipants}"
                         Grid.Row="1"
                         Height="34"
                         Width="95"
                         HorizontalAlignment="Left"/>
                <Label Content="{Binding MaxParticipantsError}"
                       Foreground="Red"
                       Grid.Row="2"
                       FontFamily="Cambria"
                       FontWeight="Thin"
                       FontSize="10"/>

            </Grid>
            <Grid Grid.Column="1" Margin="15,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label Content="Duration"
                       FontFamily="Cambria"
                       FontWeight="Bold"
                       FontSize="20"
                       Foreground="#000"/>
                <StackPanel HorizontalAlignment="Left" Grid.Row="1" Orientation="Horizontal">
                    <TextBox Style="{StaticResource RoundedTextBox}"
                             Text="{Binding Duration}"
                             Height="34"
                             Width="50"
                             HorizontalAlignment="Left"/>
                    <Label Content="/weeks"
                           FontFamily="Cambria"
                           FontWeight="Medium"
                           FontSize="18"/>
                </StackPanel>
                <Label Content="{Binding DurationError}"
                       Foreground="Red"
                       Grid.Row="2"
                       FontFamily="Cambria"
                       FontWeight="Thin"
                       FontSize="10"/>

            </Grid>
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label Content="Course Type"
                       FontFamily="Cambria"
                       FontWeight="Bold"
                       FontSize="20"
                       Foreground="#000"/>
                <Border CornerRadius="10"
                        Grid.Row="1"
                        Background="#fff"
                        Height="34" Width="154"
                        HorizontalAlignment="Left">
                    <Border.Effect>
                        <DropShadowEffect Color="#000"
                                          Direction="315"
                                          ShadowDepth="5"
                                          BlurRadius="10"
                                          Opacity="0.3"/>
                    </Border.Effect>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <RadioButton Content="Online" 
                                     FontSize="14"
                                     VerticalAlignment="Center" 
                                     Margin="0,0,15,0"
                                     IsChecked="{Binding IsOnlineChecked}"
                                     Command="{Binding OnlineCommand}"
                                     Style="{StaticResource CustomRadioButtonTheme}"/>
                        <RadioButton Content="Live" 
                                     IsChecked="{Binding IsLiveChecked}"
                                     FontSize="14" 
                                     VerticalAlignment="Center"
                                     Command="{Binding LiveCommand}"
                                     Style="{StaticResource CustomRadioButtonTheme}"/>
                    </StackPanel>
                </Border>
                <Label Content="{Binding CourseTypeParamError}"
                       Foreground="Red"
                       Grid.Row="2"
                       FontFamily="Cambria"
                       FontWeight="Thin"
                       FontSize="10"/>

            </Grid>
        </Grid>
        <Grid Grid.Row="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>
            <WrapPanel>
                <Label Content="Class Periods"
                       Foreground="#000"
                       FontSize="20"
                       FontFamily="Cambria"
                       FontWeight="Bold"/>
                <Label Content="{Binding ClassPeriodError}"
                       Foreground="Red"
                       Grid.Row="2"
                       FontFamily="Cambria"
                       FontWeight="Thin"
                       FontSize="10"
                       Margin="20,0,0,0"/>
            </WrapPanel>
            <StackPanel Grid.Row="1" Orientation="Horizontal">
                <ComboBox Style="{StaticResource ComboboxStyle}"
                          Height="34" Width="115"
                          SelectedValue="{Binding ClassDay}"
                          SelectedValuePath="Content">
                    <ComboBoxItem>Monday</ComboBoxItem>
                    <ComboBoxItem>Tuesday</ComboBoxItem>
                    <ComboBoxItem>Wednesday</ComboBoxItem>
                    <ComboBoxItem>Thursday</ComboBoxItem>
                    <ComboBoxItem>Friday</ComboBoxItem>
                    <ComboBoxItem>Saturday</ComboBoxItem>
                    <ComboBoxItem>Sunday</ComboBoxItem>
                </ComboBox>
                <ComboBox Style="{StaticResource ComboboxStyle}"
                          Height="34" Width="70"
                          Margin="20,0,0,0"
                          SelectedValue="{Binding ClassTime}"
                          SelectedValuePath="Content">
                    <ComboBoxItem>07:00</ComboBoxItem>
                    <ComboBoxItem>07:30</ComboBoxItem>
                    <ComboBoxItem>08:00</ComboBoxItem>
                    <ComboBoxItem>08:30</ComboBoxItem>
                    <ComboBoxItem>09:00</ComboBoxItem>
                    <ComboBoxItem>09:30</ComboBoxItem>
                    <ComboBoxItem>10:00</ComboBoxItem>
                    <ComboBoxItem>10:30</ComboBoxItem>
                    <ComboBoxItem>11:00</ComboBoxItem>
                    <ComboBoxItem>11:30</ComboBoxItem>
                    <ComboBoxItem>12:00</ComboBoxItem>
                    <ComboBoxItem>12:30</ComboBoxItem>
                    <ComboBoxItem>13:00</ComboBoxItem>
                    <ComboBoxItem>13:30</ComboBoxItem>
                    <ComboBoxItem>14:00</ComboBoxItem>
                    <ComboBoxItem>14:30</ComboBoxItem>
                    <ComboBoxItem>15:00</ComboBoxItem>
                    <ComboBoxItem>15:30</ComboBoxItem>
                    <ComboBoxItem>16:00</ComboBoxItem>
                    <ComboBoxItem>16:30</ComboBoxItem>
                    <ComboBoxItem>17:00</ComboBoxItem>
                    <ComboBoxItem>17:30</ComboBoxItem>
                    <ComboBoxItem>18:00</ComboBoxItem>
                    <ComboBoxItem>18:30</ComboBoxItem>
                    <ComboBoxItem>19:00</ComboBoxItem>
                    <ComboBoxItem>19:30</ComboBoxItem>
                    <ComboBoxItem>20:00</ComboBoxItem>
                    <ComboBoxItem>20:30</ComboBoxItem>
                </ComboBox>
                <Label Content="h"
                       FontFamily="Cambria"
                       FontWeight="Medium"
                       FontSize="18"/>
                <Border Margin="14,0,0,0"
                        Background="#2E6C7B" CornerRadius="50"
                        BorderThickness="0"
                        Height="34" Width="34">
                    <Button Style="{StaticResource TransparentButtonStyle}"
                            Command="{Binding AddClassPeriodCommand}">
                        <Image Height="16" Width="16" Source="C:\Users\Mihajlo\Desktop\Faks\projekti\LanguageSchoolApp\LanguageSchoolApp\LanguageSchoolApp\assets\images\add.png"/>
                    </Button>
                </Border>
            </StackPanel>
            <ItemsControl Grid.Row="2" ItemsSource="{Binding Periods}"
                          Margin="0,24,0,0"
                          BorderThickness="0" Background="Transparent">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border CornerRadius="5"
                                Background="#fff"
                                Margin="0,0,13,9">
                            <Border.Effect>
                                <DropShadowEffect Color="#000"
                                                  Direction="315"
                                                  ShadowDepth="5"
                                                  BlurRadius="10"
                                                  Opacity="0.3"/>
                            </Border.Effect>
                            <Grid Height="23" Width="184">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <Label Content=""
                                       Grid.ColumnSpan="3"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontSize="13">
                                    <Label.Style>
                                        <Style TargetType="Label">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HasData}" Value="False">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Label.Style>
                                </Label>

                                <Grid Grid.ColumnSpan="3">
                                    <Grid.Style>
                                        <Style TargetType="Grid">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HasData}" Value="True">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Grid.Style>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <WrapPanel Orientation="Horizontal" Margin="31,0,0,0">
                                        <Label Content="{Binding Period.DayOfWeek}"
                                               Foreground="#000"
                                               FontSize="13"
                                               FontFamily="Cambria"
                                               Padding="0,4,0,4"/>
                                        <Label Content="{Binding Period.StartTime, StringFormat=\{0:HH:mm\}}"
                                               Grid.Column="1"
                                               Foreground="#000"
                                               FontSize="13"
       
                                               FontFamily="Cambria"/>
                                    </WrapPanel>
                                    <Button Style="{StaticResource TransparentButtonStyle}"
                                            Command="{Binding DataContext.DeleteItemCommand,
                                                      RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding Period}"
                                            Visibility="{Binding HasData, Converter={StaticResource BoolToVisibilityConverter}}"
                                            Grid.Column="1"
                                            Margin="0,0,10,0"
                                            HorizontalAlignment="Right">
                                        <Image Height="13" Width="13" Source="C:\Users\Mihajlo\Desktop\Faks\projekti\LanguageSchoolApp\LanguageSchoolApp\LanguageSchoolApp\assets\images\minus.png"/>
                                    </Button>
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <WrapPanel Grid.Row="2" Grid.Column="1">
                <Button Content="Delete"  
                        Command="{Binding DeleteCommand}" FontFamily="Cambria"
                        Visibility="{Binding DeleteButtonVisible}"
                        Height="32" Width="120" 
                        Foreground="#fff" Background="Red"
                        FontSize="12" VerticalAlignment="Bottom"
                        Margin="0,0,0,10"
                        Style="{StaticResource RoundedButtonStyle}"/>
                <Button Content="Submit"
                        Command="{Binding SubmitCommand}" FontFamily="Cambria"
                        Height="32" Width="120" Foreground="#fff" Background="#2E6C7B"
                        FontSize="12" VerticalAlignment="Bottom"
                        Style="{StaticResource RoundedButtonStyle}"/>
            </WrapPanel>
            
            <Grid Height="26" Width="120" HorizontalAlignment="Left" VerticalAlignment="Bottom" Grid.Row="3" Margin="130,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Style="{StaticResource TransparentButtonStyle}"
                        Content="&lt;"
                        Foreground="#2E6C7B"
                        Height="34"
                        Width="24"
                        FontWeight="Bold"
                        FontSize="24"
                        VerticalAlignment="Center"
                        Grid.Column="0"
                        Command="{Binding PreviousPageCommand}"/>
                <Label Content="{Binding PageNumber}"
                        Foreground="#2E6C7B"
                        Height="40"
                        FontWeight="Bold"
                        FontSize="24"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Grid.Column="1"
                        Background="Transparent"/>
                <Button Style="{StaticResource TransparentButtonStyle}"
                        Content=">"
                        Foreground="#2E6C7B"
                        Height="34"
                        Width="24"
                        FontWeight="Bold"
                        FontSize="24"
                        VerticalAlignment="Center"
                        Grid.Column="2"
                        Command="{Binding NextPageCommand}"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
