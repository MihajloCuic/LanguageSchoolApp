<UserControl x:Class="LanguageSchoolApp.view.Courses.FinishedCoursesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LanguageSchoolApp.view.Courses"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="119"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <ContentControl Content="{Binding CourseFilterVM}"/>
            <ContentControl Grid.Row="1" Content="{Binding CourseSortingVM}"/>
        </Grid>
        <Grid Grid.Column="1" Margin="0,10,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <ContentControl Content="{Binding CancelCourseFiltersVM}" Margin="0,0,0,4"/>
            <ItemsControl Grid.Row="1" ItemsSource="{Binding FinishedCourses}"
                          Background="Transparent"
                          BorderThickness="0">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Height="168" Width="155"
                                Padding="10,10,10,7" Margin="10" 
                                CornerRadius="20" Grid.Column="1" 
                                Background="White">
                            <Border.Effect>
                                <DropShadowEffect Color="#000"
                                      Direction="315"
                                      ShadowDepth="5"
                                      BlurRadius="10"
                                      Opacity="0.5"/>
                            </Border.Effect>
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="{Binding LanguageProficiency.LanguageName}"
                                           FontSize="18"
                                           FontFamily="Cambria"
                                           FontWeight="Bold"
                                           Foreground="#2E6C7B"
                                           HorizontalAlignment="Center"/>
                                <Grid Margin="0,6,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="Level" FontSize="13"
                                               Foreground="#2E6C7B"
                                               FontFamily="Cambria" FontWeight="Bold"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               Grid.Column="0"/>
                                    <TextBlock Text="{Binding LanguageProficiency.LanguageLevel}"
                                               FontFamily="Cambria"
                                               Foreground="#2E6C7B"
                                               FontSize="11" FontWeight="Bold"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"
                                               Grid.Column="1"/>
                                </Grid>
                                <Separator Width="134" Background="#2E6C7B" HorizontalAlignment="Stretch" Margin="0,6,0,0"/>
                                <Grid Margin="0,2,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="Grade" FontSize="13"
                                               Foreground="#2E6C7B"
                                               FontFamily="Cambria" FontWeight="Bold"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               Grid.Column="0"/>
                                    <TextBlock Text="{Binding Grade}"
                                               FontFamily="Cambria"
                                               Foreground="#2E6C7B"
                                               FontSize="11" FontWeight="Bold"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"
                                               Grid.Column="1"/>
                                </Grid>
                                <Separator Width="134" Background="#2E6C7B" HorizontalAlignment="Stretch" Margin="0,6,0,0"/>
                                <Grid Margin="0,2,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="Duration" FontSize="13"
                                               Foreground="#2E6C7B"
                                               FontFamily="Cambria" FontWeight="Bold"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               Grid.Column="0"/>
                                    <TextBlock Text="{Binding Duration}"
                                               FontFamily="Cambria"
                                               Foreground="#2E6C7B"
                                               FontSize="11" FontWeight="Bold"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"
                                               Grid.Column="1"/>
                                </Grid>
                                <Separator Width="134" Background="#2E6C7B" HorizontalAlignment="Stretch" Margin="0,6,0,0"/>
                                <Grid Margin="0,2,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="Begin date" FontSize="13"
                                               Foreground="#2E6C7B"
                                               FontFamily="Cambria" FontWeight="Bold"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               Grid.Column="0"/>
                                    <TextBlock Text="{Binding BeginningDate, StringFormat=\{0:dd.MM.yyyy\}}"
                                               FontFamily="Cambria"
                                               Foreground="#2E6C7B"
                                               FontSize="11" FontWeight="Bold"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"
                                               Grid.Column="1"/>
                                </Grid>
                                <Separator Width="134" Background="#2E6C7B" HorizontalAlignment="Stretch" Margin="0,6,0,0"/>
                                <Grid Margin="0,2,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="Course type" FontSize="13"
                                               Foreground="#2E6C7B"
                                               FontFamily="Cambria" FontWeight="Bold"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               Grid.Column="0"/>
                                    <TextBlock Text="{Binding CourseType}"
                                               FontFamily="Cambria"
                                               Foreground="#2E6C7B"
                                               FontSize="11" FontWeight="Bold"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"
                                               Grid.Column="1"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Grid Height="26" Width="120" VerticalAlignment="Bottom" Margin="0,0,0,10" Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Style="{StaticResource TransparentButtonStyle}"
                        Content="&lt;"
                        Foreground="#2E6C7B"
                        Height="34"
                        Width="24"
                        FontWeight="Bold"
                        FontSize="24"
                        VerticalAlignment="Center"
                        Grid.Column="0"
                        Command="{Binding PreviousPageCommand}"/>
                <Label Content="{Binding PageNumber}"
                        Foreground="#2E6C7B"
                        Height="40"
                        FontWeight="Bold"
                        FontSize="24"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Grid.Column="1"
                        Background="Transparent"/>
                <Button Style="{StaticResource TransparentButtonStyle}"
                        Content=">"
                        Foreground="#2E6C7B"
                        Height="34"
                        Width="24"
                        FontWeight="Bold"
                        FontSize="24"
                        VerticalAlignment="Center"
                        Grid.Column="2"
                        Command="{Binding NextPageCommand}"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
