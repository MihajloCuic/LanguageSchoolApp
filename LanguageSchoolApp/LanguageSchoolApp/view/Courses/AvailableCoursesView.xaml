<UserControl x:Class="LanguageSchoolApp.view.Courses.AvailableCoursesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LanguageSchoolApp.view.Courses"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="119"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="11,0,0,191">
                <Label Content="Filters" FontSize="20" FontFamily="Cambria" Foreground="#2E6C7B" FontWeight="Bold" Height="33"/>
                <Image Height="19" Width="19" Source="C:\Users\Mihajlo\Desktop\Faks\projekti\LanguageSchoolApp\LanguageSchoolApp\LanguageSchoolApp\assets\images\filter.png"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="11,0,0,191">
                <Label Content="Sort by" FontSize="20" FontFamily="Cambria" Foreground="#2E6C7B" FontWeight="Bold" Height="33"/>
                <Image Height="19" Width="19" Source="C:\Users\Mihajlo\Desktop\Faks\projekti\LanguageSchoolApp\LanguageSchoolApp\LanguageSchoolApp\assets\images\up-down.png"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Column="1" Margin="0,29,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <ItemsControl ItemsSource="{Binding AvailableCourses}"
                      Background="Transparent"
                      BorderThickness="0">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Height="188" Width="155"
                                Padding="10,10,10,7" Margin="10" 
                                CornerRadius="20" Grid.Column="1" 
                                Background="White">
                            <Border.Effect>
                                <DropShadowEffect Color="#000"
                                                  Direction="315"
                                                  ShadowDepth="5"
                                                  BlurRadius="10"
                                                  Opacity="0.5"/>
                            </Border.Effect>
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="{Binding LanguageProficiency.LanguageName}"
                                           FontSize="18"
                                           FontFamily="Cambria"
                                           FontWeight="Bold"
                                           Foreground="#2E6C7B"
                                           HorizontalAlignment="Center"/>
                                <Grid Margin="0,6,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Text="Level" FontSize="13"
                                               Foreground="#2E6C7B"
                                               FontFamily="Cambria" FontWeight="Bold"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               Grid.Column="0"/>
                                    <TextBlock Text="{Binding LanguageProficiency.LanguageLevel}"
                                               FontFamily="Cambria"
                                               Foreground="#2E6C7B"
                                               FontSize="11" FontWeight="Bold"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"
                                               Grid.Column="1"/>
                                </Grid>
                                <Separator Width="134" Background="#2E6C7B" HorizontalAlignment="Stretch" Margin="0,6,0,0"/>
                                <Grid Margin="0,2,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="Duration" FontSize="13"
                                               Foreground="#2E6C7B"
                                               FontFamily="Cambria" FontWeight="Bold"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               Grid.Column="0"/>
                                    <TextBlock Text="{Binding Duration}"
                                               FontFamily="Cambria"
                                               Foreground="#2E6C7B"
                                               FontSize="11" FontWeight="Bold"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"
                                               Grid.Column="1"/>
                                </Grid>
                                <Separator Width="134" Background="#2E6C7B" HorizontalAlignment="Stretch" Margin="0,6,0,0"/>
                                <Grid Margin="0,2,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="Schedule" FontSize="13"
                                               Foreground="#2E6C7B"
                                               FontFamily="Cambria" FontWeight="Bold"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               Grid.Column="0"/>
                                    <TextBlock Text="{Binding Converter={StaticResource MethodToStringConverter}}"
                                               FontFamily="Cambria"
                                               Foreground="#2E6C7B"
                                               FontSize="11" FontWeight="Bold"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"
                                               Grid.Column="1"/>
                                </Grid>
                                <Separator Width="134" Background="#2E6C7B" HorizontalAlignment="Stretch" Margin="0,6,0,0"/>
                                <Grid Margin="0,2,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="Begin date" FontSize="13"
                                               Foreground="#2E6C7B"
                                               FontFamily="Cambria" FontWeight="Bold"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               Grid.Column="0"/>
                                    <TextBlock Text="{Binding BeginningDate, StringFormat=\{0:dd.MM.yyyy\}}"
                                               FontFamily="Cambria"
                                               Foreground="#2E6C7B"
                                               FontSize="11" FontWeight="Bold"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"
                                               Grid.Column="1"/>
                                </Grid>
                                <Separator Width="134" Background="#2E6C7B" HorizontalAlignment="Stretch" Margin="0,6,0,0"/>
                                <Grid Margin="0,2,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="Course type" FontSize="13"
                                               Foreground="#2E6C7B"
                                               FontFamily="Cambria" FontWeight="Bold"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               Grid.Column="0"/>
                                    <TextBlock Text="{Binding CourseType}"
                                               FontFamily="Cambria"
                                               Foreground="#2E6C7B"
                                               FontSize="11" FontWeight="Bold"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"
                                               Grid.Column="1"/>
                                </Grid>
                                <StackPanel Orientation="Horizontal" Margin="0,7,0,0" HorizontalAlignment="Center">
                                    <Button Command="{Binding DataContext.ApplyCommand,
                                                      RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            Content="Apply"
                                            Background="#2E6C7B"
                                            Foreground="#fff"
                                            FontFamily="Cambria Math"
                                            Width="79"
                                            Height="21"
                                            FontSize="10"
                                            FontWeight="Bold"
                                            HorizontalAlignment="Center"
                                            Style="{StaticResource SmallRoundedButtonStyle}"/>
                                    <Button Command="{Binding DataContext.ScheduleCommand,
                                                      RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            Height="20" Width="20"
                                            Style="{StaticResource TransparentButtonStyle}">
                                        <Image Height="20" Width="20" Source="C:\Users\Mihajlo\Desktop\Faks\projekti\LanguageSchoolApp\LanguageSchoolApp\LanguageSchoolApp\assets\images\calendar.png"/>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Grid  Height="26" Width="120" VerticalAlignment="Bottom" Margin="0,0,0,10" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Style="{StaticResource TransparentButtonStyle}"
                        Content="&lt;"
                        Foreground="#2E6C7B"
                        Height="34"
                        Width="24"
                        FontWeight="Bold"
                        FontSize="24"
                        VerticalAlignment="Center"
                        Grid.Column="0"
                        Command="{Binding PreviousPageCommand}"/>
                <Label Content="{Binding PageNumber}"
                        Foreground="#2E6C7B"
                        Height="40"
                        FontWeight="Bold"
                        FontSize="24"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Grid.Column="1"
                        Background="Transparent"/>
                <Button Style="{StaticResource TransparentButtonStyle}"
                        Content=">"
                        Foreground="#2E6C7B"
                        Height="34"
                        Width="24"
                        FontWeight="Bold"
                        FontSize="24"
                        VerticalAlignment="Center"
                        Grid.Column="2"
                        Command="{Binding NextPageCommand}"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
