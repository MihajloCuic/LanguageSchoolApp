<Window x:Class="LanguageSchoolApp.view.Users.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LanguageSchoolApp.view.Users"
        xmlns:viewModel="clr-namespace:LanguageSchoolApp.viewModel.Users"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        ResizeMode="CanMinimize"
        Height="600" Width="920">

    <Window.DataContext>
        <viewModel:LoginViewModel/>
    </Window.DataContext>
    
    <Border Background="#fff"
            CornerRadius="20">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="390"></ColumnDefinition>
                <ColumnDefinition Width="510"/>
            </Grid.ColumnDefinitions>
            <Border Background="#2E6C7B" CornerRadius="20,0,0,20">
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5*"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Image HorizontalAlignment="Center" VerticalAlignment="Top" Width="228" Margin="0,161,0,0" Height="206" Source="/assets/images/world_white.png"/>
                    <Label FontFamily="Cambria"
                           Content="Register your account"
                           Foreground="#fff" 
                           FontSize="15"
                           Margin="118,492,118,75" Grid.RowSpan="2"/>
                    <Button Content="Register" 
                            Grid.Row="1"
                            Height="37"
                            Width="193"
                            Style="{StaticResource RoundedButtonStyle}" 
                            Margin="98,25,98,38" 
                            FontFamily="Cambria Math"
                            Command="{Binding RegisterCommand}"/>
                </Grid>
            </Border>
            
            <Grid Grid.Column="1">
                <Button Content="X"
                        Background="Transparent"
                        BorderThickness="0"
                        Height="26"
                        FontSize="20"
                        FontWeight="Bold"
                        Width="17" Margin="493,10,0,564" 
                        Click="Exit"
                        Style="{StaticResource TransparentButtonStyle}"
                        ></Button>
                <Button Content="_"
                        Background="Transparent"
                        BorderThickness="0"
                        FontSize="25"
                        Style="{StaticResource TransparentButtonStyle}"
                        FontWeight="Bold" Margin="462,-1,19,562" 
                        Click="Minimize"/>

                <Label Content="Login Account" 
                       HorizontalAlignment="Left" 
                       Margin="48,71,0,0"
                       FontSize="32"
                       FontFamily="Cambria"
                       FontWeight="Bold"
                       VerticalAlignment="Top"/>

                <Label Content="Username:" 
                       HorizontalAlignment="Left" 
                       Margin="48,187,0,0" 
                       FontSize="24"
                       FontFamily="Cambria"
                       VerticalAlignment="Top"/>
                <TextBox x:Name="textBoxUserName"
                        HorizontalAlignment="Left" 
                         VerticalContentAlignment="Center"
                         Margin="48,226,0,0" 
                         TextWrapping="Wrap" 
                         VerticalAlignment="Top" 
                         Width="435"
                         FontFamily="Cambria"
                         FontSize="24"
                         Height="43"
                         BorderBrush="{Binding IsUsernameValid, Converter={StaticResource BoolToColorConverter}}"
                         Text="{Binding Username}"/>

                <Label Content="Password:" 
                    HorizontalAlignment="Left" 
                    Margin="48,289,0,0" 
                    FontSize="24"
                    FontFamily="Cambria"
                    VerticalAlignment="Top"/>
                <PasswordBox x:Name="passwordBox"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             PasswordChar="●"
                             Visibility="Visible"
                             Width="435"
                             Height="44"
                             FontSize="24"
                             VerticalContentAlignment="Center"
                             Margin="48,328,0,0"
                             PasswordChanged="PasswordChanged"
                             BorderBrush="{Binding IsPasswordValid, Converter={StaticResource BoolToColorConverter}}"/>
                <TextBox x:Name="textBoxPassword"
                    HorizontalAlignment="Left" 
                         VerticalContentAlignment="Center"
                         Margin="48,328,0,0" 
                         TextWrapping="Wrap" 
                         VerticalAlignment="Top" 
                         Width="435"
                         Visibility="Collapsed"
                         FontFamily="Cambria"
                         FontSize="24"
                         Height="44"
                         Text="{Binding Password}"
                         BorderBrush="{Binding IsPasswordValid, Converter={StaticResource BoolToColorConverter}}"/>
                <CheckBox
                    Margin="379,380,115,204"
                    Checked="ShowPassword"
                    Unchecked="HidePassword"/>
                <Label Content="Show password" 
                       FontFamily="Cambria"
                       FontSize="12"
                       Margin="392,375,27,197"/>

                <Button Content="Login"
                        Height="32"
                        Width="120"
                        Background="#2E6C7B"
                        Foreground="#fff"
                        FontFamily="Cambria Math"
                        FontSize="17"
                        Style="{StaticResource RoundedButtonStyle}" 
                        Margin="48,411,341,147"
                        Command="{Binding LoginCommand}"/>
                <Label Content="{Binding ErrorMessage}" 
                       Foreground="#fa1302"
                       HorizontalAlignment="Left" 
                       Margin="48,380,0,0" 
                       VerticalAlignment="Top" 
                       Width="245"
                       Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>
            </Grid>
        </Grid>
    </Border>
</Window>
