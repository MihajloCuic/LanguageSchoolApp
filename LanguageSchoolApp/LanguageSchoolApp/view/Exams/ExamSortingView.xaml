<UserControl x:Class="LanguageSchoolApp.view.Exams.ExamSortingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LanguageSchoolApp.view.Exams"
             mc:Ignorable="d" 
             d:DesignHeight="225" d:DesignWidth="119">
    <Grid>
        <StackPanel Orientation="Horizontal" Margin="11,0,0,191">
            <Label Content="Sort by" FontSize="20" FontFamily="Cambria" Foreground="#2E6C7B" FontWeight="Bold" Height="33"/>
            <Image Height="19" Width="19" Source="C:\Users\Mihajlo\Desktop\Faks\projekti\LanguageSchoolApp\LanguageSchoolApp\LanguageSchoolApp\assets\images\up-down.png"/>
        </StackPanel>
        <Grid Margin="10,55,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button Style="{StaticResource TransparentButtonStyle}" 
                    Content="Exam Date" 
                    Grid.Row="0"
                    Grid.Column="0"
                    FontFamily="Cambria" 
                    FontWeight="SemiBold" 
                    Foreground="#2E6C7B" 
                    FontSize="12" 
                    HorizontalAlignment="Left" 
                    Margin="0,0,0,20"
                    Command="{Binding ApplySortingCommand}"/>
            <Image Grid.Column="1" Grid.Row="0" HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Height="15" Width="15"
                   Visibility="{Binding ExamDatePictureAsc, Converter={StaticResource BoolToVisibilityConverter}}"
                   Source="C:\Users\Mihajlo\Desktop\Faks\projekti\LanguageSchoolApp\LanguageSchoolApp\LanguageSchoolApp\assets\images\down-arrow.png"/>
            <Image Grid.Column="1" Grid.Row="0" HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Height="15" Width="15"
                   Visibility="{Binding ExamDatePictureDesc, Converter={StaticResource BoolToVisibilityConverter}}"
                   Source="C:\Users\Mihajlo\Desktop\Faks\projekti\LanguageSchoolApp\LanguageSchoolApp\LanguageSchoolApp\assets\images\up-arrow.png"/>
        </Grid>
    </Grid>
</UserControl>
