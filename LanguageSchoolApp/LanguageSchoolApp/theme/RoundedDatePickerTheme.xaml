<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Calendar Icon Template -->
    <ControlTemplate x:Key="CalendarButtonTemplate" TargetType="Button">
        <Grid>
            <Image Source="C:\Users\Mihajlo\Desktop\Faks\projekti\LanguageSchoolApp\LanguageSchoolApp\LanguageSchoolApp\assets\images\calendar.png"
                   Width="16"
                   Height="16"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Stretch="Uniform"/>
        </Grid>
    </ControlTemplate>

    <!-- DatePicker Style -->
    <Style TargetType="{x:Type DatePicker}">
        <Setter Property="Foreground" Value="#555555"/>
        <Setter Property="Background" Value="#fff"/>
        <Setter Property="Height" Value="34"/>
        <Setter Property="Padding" Value="8,0"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type DatePicker}">
                    <Border CornerRadius="10"
                            Background="#fff"
                            Padding="0">
                        <Border.Effect>
                            <DropShadowEffect Color="#000"
                                              Direction="315"
                                              ShadowDepth="5"
                                              BlurRadius="10"
                                              Opacity="0.3"/>
                        </Border.Effect>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- DatePickerTextBox (main part) -->
                            <DatePickerTextBox x:Name="PART_TextBox"
                                             Grid.Column="0"
                                             Foreground="#555555"
                                             Padding="8,0,0,0"
                                             VerticalContentAlignment="Center"
                                             HorizontalContentAlignment="Left"
                                             BorderThickness="0"
                                             Background="Transparent"
                                             Text="dd / mm / yyyy"
                                             FontSize="14">
                                <DatePickerTextBox.Resources>
                                    <Style TargetType="{x:Type DatePickerTextBox}">
                                        <Setter Property="Control.Template">
                                            <Setter.Value>
                                                <ControlTemplate>
                                                    <TextBox x:Name="PART_TextBox"
                                                           Text="{Binding Path=TemplatedParent.Text, RelativeSource={RelativeSource TemplatedParent}}"
                                                           BorderThickness="0"
                                                           Background="Transparent"
                                                           Padding="{TemplateBinding Padding}"
                                                           VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                                           HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"/>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </DatePickerTextBox.Resources>
                            </DatePickerTextBox>

                            <!-- Button -->
                            <Button x:Name="PART_Button"
                                  Grid.Column="1"
                                  Width="32"
                                  Margin="0"
                                  Padding="0"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Stretch"
                                  Focusable="False"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  Template="{StaticResource CalendarButtonTemplate}"/>

                            <!-- Popup for the calendar -->
                            <Popup x:Name="PART_Popup"
                                 PlacementTarget="{Binding ElementName=PART_Button}"
                                 StaysOpen="False"
                                 AllowsTransparency="True">
                                <Calendar x:Name="PART_Calendar"
                                        BorderThickness="1"
                                        BorderBrush="#CCCCCC"
                                        Background="White"
                                        DisplayDateStart="{TemplateBinding DisplayDateStart}"
                                        DisplayDateEnd="{TemplateBinding DisplayDateEnd}"
                                        DisplayDate="{TemplateBinding DisplayDate}"
                                        FirstDayOfWeek="{TemplateBinding FirstDayOfWeek}"
                                        IsTodayHighlighted="True"/>
                            </Popup>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="PART_Button" Property="Background" Value="#F0F0F0"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>